{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "ignore": ["packages/export-size", "packages/temporal-test262-runner"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
