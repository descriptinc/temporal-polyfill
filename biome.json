{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/export-size-output/**",
      "packages/export-size",
      "packages/temporal-test262-runner"
    ]
  },
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": "off",
        "useOptionalChain": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConstEnum": "off",
        "noExplicitAny": "off",
        "noGlobalIsNan": "off",
        "noShadowRestrictedNames": "off",
        "noUnsafeDeclarationMerging": "off"
      },
      "style": {
        "noCommaOperator": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
