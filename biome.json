{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "ignore": ["packages/export-size", "packages/temporal-test262-runner"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": "off",
        "useOptionalChain": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "noGlobalIsNan": "off",
        "noShadowRestrictedNames": "off",
        "noUnsafeDeclarationMerging": "off"
      },
      "style": {
        "noCommaOperator": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
