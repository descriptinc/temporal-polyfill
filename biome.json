{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "packages/export-size",
      "packages/temporal-test262-runner"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": "error"
      },
      "nursery": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  }
}
