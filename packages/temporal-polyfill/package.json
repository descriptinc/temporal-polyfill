{
  "private": true,
  "name": "temporal-polyfill",
  "version": "0.2.0",
  "title": "Temporal Polyfill",
  "description": "A lightweight polyfill for Temporal, successor to the JavaScript Date object",
  "author": {
    "name": "Adam Shaw",
    "email": "arshaw@users.noreply.github.com",
    "url": "http://arshaw.com/"
  },
  "contributors": [
    {
      "name": "Ishaan Bharal",
      "email": "ishbharal@gmail.com"
    }
  ],
  "license": "MIT",
  "copyright": "2022 Adam Shaw",
  "repository": {
    "type": "git",
    "url": "https://github.com/fullcalendar/temporal-polyfill.git",
    "directory": "packages/temporal-polyfill"
  },
  "scripts": {
    "lint": "biome check .",
    "build": "./scripts/clean.js && pnpm run pkg-json && pnpm run tsc && pnpm run bundle && pnpm run readme",
    "dev": "./scripts/clean.js && pnpm run pkg-json --dev && pnpm run tsc && concurrently --prefix-colors green npm:tsc:dev npm:bundle:dev",
    "tsc": "tsc --build",
    "tsc:dev": "tsc --build --watch --pretty",
    "bundle": "./scripts/bundle.js",
    "bundle:dev": "./scripts/bundle.js --dev",
    "pkg-json": "./scripts/pkg-json.js",
    "readme": "cp ../../README.md dist",
    "test": "./scripts/test.js",
    "test:own": "vitest run",
    "clean": "./scripts/clean.js --tsc",
    "size": "./scripts/size.js"
  },
  "type": "module",
  "buildConfig": {
    "exports": {
      ".": {
        "types": "typeOverrides/index"
      },
      "./impl": {
        "types": "typeOverrides/impl"
      },
      "./global": {
        "types": "typeOverrides/global",
        "iife": true
      },
      "./fns/instant": {
        "src": "funcApi/instant"
      },
      "./fns/zoneddatetime": {
        "src": "funcApi/zonedDateTime"
      },
      "./fns/plaindatetime": {
        "src": "funcApi/plainDateTime"
      },
      "./fns/plaindate": {
        "src": "funcApi/plainDate"
      },
      "./fns/plainyearmonth": {
        "src": "funcApi/plainYearMonth"
      },
      "./fns/plainmonthday": {
        "src": "funcApi/plainMonthDay"
      },
      "./fns/plaintime": {
        "src": "funcApi/plainTime"
      },
      "./fns/duration": {
        "src": "funcApi/duration"
      },
      "./fns/now": {
        "src": "funcApi/now"
      }
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  },
  "dependencies": {
    "temporal-spec": "^0.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "@js-temporal/temporal-test262-runner": "workspace:*",
    "@types/node": "^16.9.1",
    "concurrently": "^8.2.0",
    "export-size": "workspace:*",
    "gzip-size-cli": "^5.1.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "terser": "^5.27.0",
    "typescript": "^5.1.6",
    "vitest": "^1.2.2",
    "yargs": "^17.7.2"
  }
}
